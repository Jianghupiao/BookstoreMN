@model Group001Bookstore.MVC.Models.SingleBook

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CartNovel</title>
</head>
<body>
    <div>
        <h2>Add this book to the shopping cart</h2>
        @using (Html.BeginForm("AddToCart", "SearchBook"))
        {
            if (Model.CSBook != null)
            {
                @Html.Hidden("BookName", Model.CSBook.Name)
                @Html.Hidden("BookPrice", Model.CSBook.Price)
                @Html.Hidden("BookUniqueId", Model.CSBook.UniqueId)
                <div>Book Name: @Model.CSBook.Name</div>
                <div>Book Price: @Model.CSBook.Price</div>
                <div>Please input the amount:</div>@Html.TextBox("BookAmount")
                <div>Please input your User Id:</div>@Html.TextBox("UserId")<br />
                <input type="submit" value="Add to cart" />

            }
            if (Model.Economicsbook != null)
            {
                @Html.Hidden("BookName", Model.Economicsbook.Name)
                @Html.Hidden("BookPrice", Model.Economicsbook.Price)
                @Html.Hidden("BookUniqueId", Model.Economicsbook.UniqueId)
                <div>Book Name: @Model.Economicsbook.Name</div>
                <div>Book Price: @Model.Economicsbook.Price</div>
                <div>Please input the amount:</div>@Html.TextBox("BookAmount")
                <div>Please input your User Id:</div>@Html.TextBox("UserId")<br />
                <input type="submit" value="Add to cart" />

            }
            if (Model.NovelBook != null)
            {
                @Html.Hidden("BookName", Model.NovelBook.Name)
                @Html.Hidden("BookPrice", Model.NovelBook.Price)
                @Html.Hidden("BookUniqueId", Model.NovelBook.UniqueId)
                <div>Book Name: @Model.NovelBook.Name</div>
                <div>Book Price: @Model.NovelBook.Price</div>
                <div>Please input the amount:</div>@Html.TextBox("BookAmount")
                <div>Please input your User Id:</div>@Html.TextBox("UserId")<br />
                <input type="submit" value="Add to cart" />

            }



        }





    </div>
</body>
</html>