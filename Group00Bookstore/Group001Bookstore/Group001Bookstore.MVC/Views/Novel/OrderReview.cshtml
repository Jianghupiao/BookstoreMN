@model Group001Bookstore.MVC.Models.NovelBook
@{ Layout = "~/Views/Shared/_Layout.cshtml";}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CartNovel</title>
</head>
<body>
    <div>
        <h2>Add this book to the shopping cart</h2>
        @using (Html.BeginForm("AddToCart", "Novel"))
        {
            @Html.Hidden("BookName", Model.Name)
            @Html.Hidden("BookPrice", Model.Price)
            @Html.Hidden("BookUniqueId", Model.UniqueId)
            <div>Book Name: @Model.Name</div>
            <div>Book Price: @Model.Price</div>
            <div>Please input the amount:</div>@Html.TextBox("BookAmount")
            <div>Please input your User Id:</div>@Html.TextBox("UserId")<br />
            <input type="submit" value="Add to cart" />
        }
    </div>
</body>
</html>
